set autoindent
set smartindent
set number
syntax on
set cursorline
set wildmenu
set showcmd
set showmatch
set pastetoggle=<F2>
set showmode
set hlsearch
set ignorecase
set smartcase
set incsearch
set nowrap
set tabstop=4
set shiftwidth=4
set nocompatible
filetype on
filetype plugin on
filetype indent on
set history=1000
set wildignore=*.docx,*.jpg,*.png,*.gif,*.pdf,*.pyc,*.exe,*.flv,*.img,*.xlsx
